{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "types": ["node, jest"],
    "jsx": "react",
    "noEmit": true,
    "incremental": true
  }
}
