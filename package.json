{
  "name": "olx-clone-nestjs",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "app": "yarn workspace app start",
    "server:dev": "yarn workspace server dev",
    "dev": "concurrently --kill-others-on-fail \"yarn app\" \"yarn server:dev\"",
    "server:prod": "cd packages/server && npm run prestart:prod && npm run start",
    "lint:check": "eslint ./packages/ --ext .ts",
    "format:check": "eslint --fix \"./**/*.{ts,js}\""
  },
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "concurrently": "^5.2.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.17.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.5",
    "prettier": "^2.0.5"
  },
  "dependencies": {
    "typescript": "^3.9.6"
  }
}
